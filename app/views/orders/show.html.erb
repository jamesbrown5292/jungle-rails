
<section class="orders-show">

<header class="page-header">
<h1>Order #<%= @order.id %></h1>
</header>

<div class="panel panel-default items">
<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2"> Product </th>
        <th> Quantity </th>
      <th> Total </th>
    </tr>
  </thead>
<tbody>

    <% @line_item = LineItem.where("order_id = #{@order.id}") %>
    <% @line_item.each do |i| %>
      <%= render partial: 'line_item', locals: {i: i} %>
    <% end %> 

  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        TOTAL:
      </th>
      <th colspan="1">
        <%= humanized_money_with_symbol @order.total_cents / 100 %>
      </th>
     
    </tr>
    <tr>
      <th colspan="3" class="email-details">
         Order details sent to your email address: <%= @order.email %>
      </th>
      <th colspan="1">
        
      </th>
    </tr>
  </tfoot>
</table>
</div>

<div class="order-summary jumbotron">
  <h4>Thank you for your order!</h4>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</div>
</section>
